<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<GridPane styleClass="root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ui.home.HomeView">
    <rowConstraints>
        <RowConstraints percentHeight="5" />
        <RowConstraints percentHeight="95" />
    </rowConstraints>

    <HBox maxWidth="Infinity" spacing="5" styleClass="menu" GridPane.rowIndex="0">
        <Button onAction="#showCardDetailViewAction" text="Card Details Demo" />
        <Button onAction="#showDraggableViewAction" text="Draggable Demo" />
        <Button onAction="#logoutAction" text="Logout" />
    </HBox>
    <GridPane GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="80" />
        </columnConstraints>
        <GridPane GridPane.columnIndex="0">
            <rowConstraints>
                <RowConstraints percentHeight="50"/>
                <RowConstraints percentHeight="50"/>
            </rowConstraints>
            <VBox GridPane.rowIndex="0">
                <Text text="Active Users:" />
                <ListView fx:id="mActiveUsersListView"/>
            </VBox>
            <VBox GridPane.rowIndex="1">
                <Text text="Pending Invites:" />
                <ListView fx:id="mPendingInvitesListView"/>
                <Button text="Invite User" onAction="#inviteUserAction"/>
            </VBox>
        </GridPane>
        <VBox GridPane.columnIndex="1">
            <Text text="Lobby Chat:" />
            <ListView fx:id="mMessagesList"/>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints percentWidth="90" />
                    <ColumnConstraints percentWidth="10" />
                </columnConstraints>
                <TextField GridPane.columnIndex="0" fx:id="mMessageField"/>
                <Button text="Send" onAction="#sendAction" GridPane.columnIndex="1" prefWidth="100" />
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
</GridPane>
